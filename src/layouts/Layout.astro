---
interface Props {
  title: string;
}

const { title } = Astro.props;
import highlight from "../../public/highlight.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: "Poppins", sans-serif;
    color: #f9f9f9;
    width: 100%;
    height: 100%;
  }
  @font-face {
    font-family: "Poppins";
    src: url("/Poppins/Poppins-SemiBold.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  body {
    letter-spacing: 0.1rem;
    gap: 2.2rem;
  }
  button {
    cursor: pointer;
  }
  .section {
    width: 100%;
    height: 100%;
    max-width: 1500px;
    max-height: 1000px;
    margin-right: 3rem;
    margin-left: 3rem;
  }
  .highlight {
    background-image: url("highlight.svg");
    background-position: 50% 50%;
    padding-left: 20px;
    padding-right: 20px;
    padding-top: 5px;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
