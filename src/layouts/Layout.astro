---
interface Props {
  title: string;
}

const { title } = Astro.props;
import highlight from "../../public/highlight.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:ital,wght@0,400;0,600;0,800;1,700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    font-family: "Poppins", sans-serif;
    color: #f9f9f9;
    width: 100%;
    height: 100%;
  }
  @font-face {
    font-family: "Poppins";
    src: url("/Poppins/Poppins-SemiBold.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  body {
    background-color: black;
    letter-spacing: 0.1rem;
    gap: 2.2rem;
  }
  button {
    cursor: pointer;
  }
  .section {
    width: 100%;
    height: 100%;
    max-width: 1500px;
    max-height: 1000px;
    margin-right: 3rem;
    margin-left: 3rem;
  }
  .highlight {
    font-family: "Barlow Semi Condensed", sans-serif;
    color: #542ba4;
    font-weight: 800;
    font-size: 120%;
  }
</style>
