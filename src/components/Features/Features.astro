<style>
  .feature {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    border-radius: 1rem;
    align-items: center;
    justify-content: start;
    padding: 1rem;
    max-width: 19rem;
    height: fit-content;
    cursor: pointer;
    transition: all 0.2s;
  }
  .feature:hover {
    background-color: var(--main-color);
  }
  .feature:hover .icon,
  .feature:hover h3,
  .feature:hover p {
    color: white;
    fill: white;
  }
  h3 {
    font-size: 1.75rem;
    color: var(--main-color);
    text-align: center;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 0.9rem;
    color: #bababa;
    text-align: center;
  }
  .icon {
    width: 3.5rem;
    fill: #f0f0f0;
  }
  @media (width<=1200px) {
    h3 {
      font-size: 1.5rem;
    }
    p {
      font-size: 0.8rem;
    }
  }
  @media (width<=1000px) {
    .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
    h3 {
      font-size: 1.8rem;
    }
    p {
      font-size: 1rem;
    }
  }
  @media (width<=650px) {
    h2{
      padding:0 .8rem;
    }
    .container {
      grid-template-columns: 1fr;
      place-items: center;
      padding: 0;
    }
  }
</style>
