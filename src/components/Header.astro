<style>
  .nav-item {
    font-size: 1.1rem;
    position: relative;
  }

  .nav-item::before {
    content: "";
    width: 0;
    height: 1.5px;
    border-radius: 2px;
    background-color: #fff;
    position: absolute;
    bottom: -0.25rem;
    left: 50%;
    transition:
      width 0.35s,
      left 0.35s;
  }

  .nav-item:hover::before {
    width: 100%;
    left: 0;
  }
</style>
