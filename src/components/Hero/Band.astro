---
const { text, number } = Astro.props;
---

<div class="flex flex-col gap-2 justify-center items-center font-serif">
  <p class="font-highlight text-2xl">{text}</p>
  <p class="text-4xl">+{number}</p>
</div>
<style>
  @media (width<=1200px) {
    p {
      font-size: 140%;
    }
  }
  @media (width<=1000px) {
    p {
      font-size: 200%;
      padding: 0.3rem;
    }
  }
</style>
