---
import { Image } from "astro:assets";
import Logo from "../../../public/logo.webp";
import Cta from "../Cta";
---

<header class="flex items-center justify-between px-5 py-3 my-3">
  <div class="flex items-center">
    <Image src={Logo} alt="My Fitness Blog Logo" class="w-28" />
  </div>
  <nav class="flex items-center gap-16">
    <a href="#" class="nav-link">Home</a>
    <a href="#" class="nav-link">Blog</a>
    <a href="#" class="nav-link">Calculadoras</a>
    <a href="#" class="nav-link">Contacto</a>
  </nav>
  <Cta text="Hazte miembro" />
</header>

<style>
  header {
    border-bottom: 1px solid #532ba423;
  }
  .nav-link {
    position: relative;
    z-index: 1;
  }

  .nav-link::before {
    content: "";
    width: 0;
    height: 12px;
    border-radius: 2px;
    background-color: var(--main-color);
    position: absolute;
    z-index: -1;
    bottom: -0.05rem;
    left: 50%;
    transition:
      width 0.35s,
      left 0.35s;
  }

  .nav-link:hover::before {
    width: 100%;
    left: 0;
  }
</style>
