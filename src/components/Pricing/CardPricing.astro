---
import ListPricing from "./ListPricing.astro";

const { price, advantageArr } = Astro.props;
---

<div class="card">
  <div>
    <p class="price">$ {price}</p>
    <ul class="lists">
      {advantageArr.map((advantage) => <ListPricing advantage={advantage} />)}
    </ul>
  </div>
  <a href="#" class="action"> Apuntarme </a>
</div>
<style>
  .card {
    width: 400px;
    height: 30rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 1.5rem;
    background-color: #060606;
    padding: 1.5rem;
    box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.3);
  }

  .price {
    font-size: 3.2rem;
    margin-top: 0.5rem;
    line-height: 1;
  }

  .lists {
    margin-top: 2.5rem;
    display: flex;
    flex-direction: column;
    grid-row-gap: 0.5rem;
    row-gap: 0.5rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    color: rgba(255, 255, 255, 1);
  }
  .action {
    margin-top: 2rem;
    width: 100%;
    border: 2px solid #fafafa;
    border-radius: 9999px;
    background-color: #fafafa;
    padding: 0.625rem 1.5rem;
    font-weight: 800;
    text-align: center;
    font-size: 1rem;
    color: rgba(0, 0, 0, 1);
    transition: all 0.2s ease;
  }

  .action:hover {
    color: rgba(255, 255, 255, 1);
    background-color: transparent;
  }
</style>
