---
import Testimonial from "./Testimonial.astro";
---

<section id="testimonials" class="section">
  <h2 class="text-6xl text-center font-highlight">
    ¿Qué dicen nuestros clientes?
  </h2>
  <div class="flex gap-6 items-center justify-center my-20">
    <button class="btn-slider">
      <ion-icon class="icon" name="arrow-back-outline"></ion-icon>
    </button>
    <Testimonial ReviewIndex="0" />
    <button class="btn-slider">
      <ion-icon class="icon" name="arrow-forward-outline"></ion-icon>
    </button>
  </div>
</section>

<style>
  .icon {
    font-size: 1.5rem;
  }
</style>
