---
import { Image } from "astro:assets";
import "../../styles/global.css";
const { title, image, description, post, index, category } = Astro.props;
const truncateDescr = (description: string): string => {
  return description.length > 100
    ? description.slice(0, 100) + " ..."
    : description;
};
---

<div class="card">
  <a href={`/posts/${post.frontmatter.slug}`} class="card-link">
    <div class="card-img-holder">
      <Image
        src={post.frontmatter.image}
        alt="Blog image"
        width="100"
        height="100"
        loading="lazy"
      />
    </div>
    <div class="px-5 pb-3">
      <h3 class="blog-title">{post.frontmatter.title}</h3>
      <p class="description">
        {truncateDescr(post.frontmatter.description)}
      </p>
      <div class="options">
        <span
          class={`tag tag-${post.frontmatter.category === "Ejercicio" ? "ex" : post.frontmatter.category === "Nutrición" ? "nut" : "sal"}`}
        >
          {post.frontmatter.category}
        </span>
        <span class="border-b-2 border-main text-[#bababa]">Leer más</span>
      </div>
    </div>
  </a>
</div>

<style>
  .card {
    width: 25rem;
    border-radius: 2rem;
    background: transparent;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    -webkit-box-shadow: 0px 0px 56px 0px rgba(139, 95, 191, 0.25);
    -moz-box-shadow: 0px 0px 56px 0px rgba(139, 95, 191, 0.25);
    box-shadow: 0px 0px 56px 0px rgba(139, 95, 191, 0.25);
  }

  .card-img-holder {
    width: 100%;
    height: 45%;
    position: relative;
  }

  .card-img-holder img {
    border-radius: 1rem;
    width: 100%;
    height: 100%;
    max-height: 15rem;
    object-fit: cover;
  }

  .blog-title {
    color: #8a63d6;
    padding: 1rem 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .description {
    padding: 1rem 0;
    font-size: 0.8rem;
  }

  .options {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 1rem;
  }

  .options span {
    font-weight: 600;
  }

  .tag {
    align-self: flex-start;
    padding: 0.25em 0.75em;
    border-radius: 1em;
    font-size: 0.8rem;
  }

  .tag-ex {
    background: #201335;
  }

  .tag-nut {
    background: #003b36;
  }

  .tag-sal {
    background: #140d4f;
  }

  .btn {
    font-size: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 400;
    background: #eef7fe;
    color: #22215b;
    cursor: pointer;
  }

  .btn:hover {
    background: #d4e8fc;
  }

  @media (width<=1400px) {
    .card {
      width: 95%;
    }
  }

  @media (width<=1300px) {
    .card {
      width: 90%;
    }
  }
</style>
